{
  "name": "onlyswaps-solidity",
  "version": "0.0.9",
  "description": "",
  "keywords": [
    "solver",
    "cross-chain",
    "token",
    "transfer",
    "cross-chain",
    "messaging",
    "threshold",
    "cryptography",
    "threshold",
    "network"
  ],
  "homepage": "https://github.com/randa-mu/onlyswaps-solidity#readme",
  "bugs": {
    "url": "https://github.com/randa-mu/onlyswaps-solidity/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/randa-mu/onlyswaps-solidity.git"
  },
  "license": "MIT",
  "author": "randamu",
  "type": "commonjs",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:forge && npm run build:hardhat",
    "build:forge": "FOUNDRY_PROFILE=build forge soldeer install && FOUNDRY_PROFILE=build forge build",
    "build:hardhat": "hardhat compile",
    "test": "npm run test:forge && npm run test:hardhat",
    "test:forge": "FOUNDRY_PROFILE=test forge test --gas-report",
    "test:hardhat": "hardhat test",
    "clean": "hardhat clean && forge clean",
    "lint": "npm run lint:forge && npm run lint:hardhat",
    "lint:forge": "forge fmt --check",
    "lint:hardhat": "prettier --check test/hardhat",
    "lint:fix": "npm run lint:forge:fix && npm run lint:hardhat:fix",
    "lint:forge:fix": "forge fmt",
    "lint:hardhat:fix": "prettier --write test/hardhat"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.1",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/ignition-core": "^0.15.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "ethers": "^6.13.3",
    "prettier-plugin-solidity": "^1.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@kevincharm/noble-bn254-drand": "^0.0.1",
    "@noble/curves": "1.6.0",
    "@nomicfoundation/ethereumjs-util": "^9.0.4",
    "@nomicfoundation/hardhat-foundry": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chai": "4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.1",
    "dotenv": "^16.4.5",
    "hardhat": "^2.25.0",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mcl-wasm": "^1.5.0",
    "prettier": "^3.3.3",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.sol": "forge fmt",
    "*.js": "npm run prettier",
    "*.ts": "npm run prettier",
    "*.json": "npm run prettier",
    "*.yml": "npm run prettier"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
